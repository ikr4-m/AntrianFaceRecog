@{
    ViewData["Title"] = "Register Pasien";
    Layout = "Dashboard/_Layout";
}

@section Navbar {
    <partial name="Home/Navbar" />
}

@section PageBody {
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <p>Silahkan diisi data-data di bawah ini dengan baik dan benar.</p>

        <div class="row">
          <div class="col-md-12 col-xl-6 mb-3 p-3">
            <label class="form-label">NIK</label>
            <input type="number" min="1000000000000000" class="form-control" name="NIK" id="nik" required>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-xl-6 mb-3 p-3">
            <label class="form-label">Nama</label>
            <input type="text" name="nama" id="Nama" class="form-control" required>
          </div>
          <div class="col-md-12 col-xl-6 mb-3 p-3">
            <label class="form-label">Jenis Kelamin</label>
            <div>
              <label class="form-check form-check-inline mt-2">
                <input class="form-check-input" type="radio" name="JenisKelamin" value="Laki-laki">
                <span class="form-check-label">Laki-laki</span>
              </label>
              <label class="form-check form-check-inline mt-2">
                <input class="form-check-input" type="radio" name="JenisKelamin" value="Perempuan">
                <span class="form-check-label">Perempuan</span>
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-xl-6 mb-3 p-3">
            <label class="form-label">Tempat Lahir</label>
            <input type="text" name="nama" id="TempatLahir" class="form-control" required>
          </div>
          <div class="col-md-12 col-xl-6 mb-3 p-3">
            <label class="form-label">Tanggal Lahir</label>
            <div class="input-icon mb-2">
              <input type="text" name="TanggalLahir" class="form-control" data-mask="00/00/0000" data-mask-visible="true" placeholder='@DateTime.Now.ToString("dd/MM/yyyy")' autocomplete="off" required/>
              <span class="input-icon-addon">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><rect x="4" y="5" width="16" height="16" rx="2" /><line x1="16" y1="3" x2="16" y2="7" /><line x1="8" y1="3" x2="8" y2="7" /><line x1="4" y1="11" x2="20" y2="11" /><line x1="11" y1="15" x2="12" y2="15" /><line x1="12" y1="15" x2="12" y2="18" /></svg>
              </span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    console.log("Reserved for JSON register")
  </script>
}